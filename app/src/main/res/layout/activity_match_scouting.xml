<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".matchScouting.MatchScoutingTeleopActivity">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/classified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/overflow"
        android:layout_marginTop="30dp"
        android:textSize="48sp"
        android:text="Basket"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/topBasketLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/topBasket"
        app:layout_constraintRight_toLeftOf="@+id/topBasket"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="H"
        />

    <ImageButton
        android:id="@+id/topBasket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sample_blue"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@id/classified"
        app:layout_constraintLeft_toLeftOf="@id/classified"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/topBasketText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/topBasket"
        app:layout_constraintLeft_toRightOf="@+id/topBasket"
        android:layout_marginLeft="30dp"
        android:textSize="48sp"
        tools:text="0"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/midBasketLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/midBasket"
        app:layout_constraintRight_toLeftOf="@+id/midBasket"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="L"
        />

    <ImageButton
        android:id="@+id/midBasket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sample_blue"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@id/topBasket"
        app:layout_constraintLeft_toLeftOf="@id/topBasket"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/midBasketText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/midBasket"
        app:layout_constraintLeft_toLeftOf="@+id/topBasketText"
        android:textSize="48sp"
        tools:text="0"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lowBasketLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/lowBasket"
        app:layout_constraintRight_toLeftOf="@id/lowBasket"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="NZ"
        />

    <ImageButton
        android:id="@+id/lowBasket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sample_blue"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@id/midBasket"
        app:layout_constraintLeft_toLeftOf="@id/midBasket"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lowBasketText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/lowBasket"
        app:layout_constraintLeft_toLeftOf="@+id/topBasketText"
        android:textSize="48sp"
        tools:text="0"
        />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/overflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/classified"
        app:layout_constraintLeft_toRightOf="@id/classified"
        app:layout_constraintRight_toLeftOf="@id/ascent"
        android:textSize="48sp"
        android:text="Specimen"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/topSpecimenLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/topSpecimen"
        app:layout_constraintRight_toLeftOf="@id/topSpecimen"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="H"
        />

    <ImageButton
        android:id="@+id/topSpecimen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/specimen_blue"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@id/overflow"
        app:layout_constraintLeft_toLeftOf="@id/overflow"

        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/topSpecimenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/topSpecimen"
        app:layout_constraintLeft_toRightOf="@id/topSpecimen"
        android:layout_marginLeft="30dp"
        android:textSize="48sp"
        tools:text="0"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lowSpecimenLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/lowSpecimen"
        app:layout_constraintRight_toLeftOf="@+id/lowSpecimen"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="L"
        />

    <ImageButton
        android:id="@+id/lowSpecimen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/specimen_blue"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@id/topSpecimen"
        app:layout_constraintLeft_toLeftOf="@id/topSpecimen"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lowSpecimenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/lowSpecimen"
        app:layout_constraintLeft_toLeftOf="@id/topSpecimenText"
        android:textSize="48sp"
        tools:text="0"
        />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ascent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/overflow"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:textSize="48sp"
        android:text="Ascent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/level3Ascent"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blueAlliance"
        app:layout_constraintTop_toBottomOf="@id/ascent"
        app:layout_constraintStart_toStartOf="@id/ascent"
        android:text="level 3"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/level2Ascent"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blueAlliance"
        app:layout_constraintTop_toBottomOf="@id/level3Ascent"
        app:layout_constraintStart_toStartOf="@id/level3Ascent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:text="level 2"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/level1Ascent"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blueAlliance"
        app:layout_constraintTop_toBottomOf="@id/level2Ascent"
        app:layout_constraintStart_toStartOf="@id/level2Ascent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:text="level 1"
        />


















    <ImageButton
        android:id="@+id/observationZone"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/observation_zone_blue"
        android:scaleType="fitCenter"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@+id/lowBasket"
        app:layout_constraintLeft_toLeftOf="@id/lowBasket"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/teamKeyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="FRC 3536"
        android:padding="20px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>