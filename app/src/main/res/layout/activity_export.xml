<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExportActivity">

    <include
        android:id="@+id/actionBar"
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/actionBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="75dp"
        >

    <LinearLayout
        android:id="@+id/left_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/right_column"
        android:layout_marginRight="50dp"

        >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/exportCaptainMatchResults"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:text="Matches Captain -> CSV"

        />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exportRed1MatchResults"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:text="Matches Red 1 -> CSV"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exportRed2MatchResults"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:text="Matches Red 2 -> CSV"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exportBlue1MatchResults"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:text="Matches Blue 1 -> CSV"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exportBlue2MatchResults"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:text="Matches Blue2 -> CSV"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/left_column"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="50dp"
        >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/exportPitScouting"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:text="Pit Scouting -> CSV"
         />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/importMatchCSV"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:text="CSV -> Matches"
        />
    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>